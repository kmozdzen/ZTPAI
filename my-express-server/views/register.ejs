<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    
    <!-- styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/register.css">
    
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Ubuntu&display=swap" rel="stylesheet">

    <!-- scripts -->
    <script src="https://kit.fontawesome.com/3ff5952e8a.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="/"><h1>GymTracker</h1></a>
            </nav>
        </header>
        <main>
            <div class="row">
                <div class="col-lg-6 register-container">
                    <form action="register-data" method="post">
                        <div class="input-group input-group-lg mb-3">
                            <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa-solid fa-user input-icons"></i></span>
                            </div>
                            <input name="email" type="email" class="form-control input-text" placeholder="Email">
                        </div>
                        
                        <div class="input-group input-group-lg mb-3">
                            <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa-solid fa-lock input-icons"></i></span>
                            </div>
                            <input name="password" type="password" class="form-control input-text" placeholder="Haslo">
                        </div>

                        <div class="input-group input-group-lg mb-3">
                            <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa-solid fa-lock input-icons"></i></span>
                            </div>
                            <input name="confirmedPassword" type="password" class="form-control input-text" placeholder="Powtórz hasło">
                        </div>

                        <div class="input-group input-group-lg mb-3">
                            <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa-solid fa-signature input-icons"></i></span>
                            </div>
                            <input name="name" type="text" class="form-control input-text" placeholder="Imię">
                        </div>

                        <div class="input-group input-group-lg mb-3">
                            <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa-solid fa-signature input-icons"></i></span>
                            </div>
                            <input name="surname" type="text" class="form-control input-text" placeholder="Nazwisko">
                        </div>
                        
                        <button onclick="location.href='/rejestracja'" class="btn btn-dark btn-lg log-buttons" type="submit"><i class="fa-regular fa-address-card"></i> Rejestracja</button>
                    </form>
                </div>
                <div class="col-lg-6 man-img-container">
                    <img class="man-img" src="/public/images/man.svg" alt="man">
                </div>
            <div class="container"></div>
        </main>
    </div>
</body>
</html>